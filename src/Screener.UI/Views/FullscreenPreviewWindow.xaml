<Window x:Class="Screener.UI.Views.FullscreenPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        KeyDown="Window_KeyDown">
    <Grid>
        <Image Source="{Binding PreviewImage, RelativeSource={RelativeSource AncestorType=Window}}"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="LowQuality"/>
    </Grid>
</Window>
