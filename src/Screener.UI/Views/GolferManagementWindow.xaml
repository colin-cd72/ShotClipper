<Window x:Class="Screener.UI.Views.GolferManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage Golfers"
        Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundLevel0Brush}">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Golfer List -->
        <Border Background="{DynamicResource BackgroundLevel1Brush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="1"
                CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{DynamicResource PanelHeaderGradient}"
                        CornerRadius="6,6,0,0" Padding="12,8">
                    <TextBlock Text="Golfers" FontWeight="SemiBold" FontSize="13"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Border>

                <!-- Golfer List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Golfers}"
                         SelectedItem="{Binding SelectedGolfer}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,6" BorderThickness="0,0,0,1"
                                    BorderBrush="{DynamicResource BorderSubtleBrush}">
                                <StackPanel>
                                    <TextBlock Text="{Binding EffectiveDisplayName}"
                                               FontWeight="SemiBold" FontSize="12"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="No handicap"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Handicap}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="No handicap"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Handicap, StringFormat='Handicap: {0:F1}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Visibility="{Binding Handicap, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Add/Remove Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                    <Button Content="+" Command="{Binding AddGolferCommand}"
                            Width="32" Height="32" FontSize="18"
                            Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="-" Command="{Binding DeleteGolferCommand}"
                            Width="32" Height="32" FontSize="18"
                            Style="{DynamicResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel: Edit Form -->
        <Border Grid.Column="1"
                Background="{DynamicResource BackgroundLevel1Brush}"
                BorderBrush="{DynamicResource BorderSubtleBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Margin="16,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>
                    <TextBlock Text="First Name"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding EditFirstName, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource BackgroundLevel0Brush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6" Margin="0,0,0,12"/>

                    <TextBlock Text="Last Name"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding EditLastName, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource BackgroundLevel0Brush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6" Margin="0,0,0,12"/>

                    <TextBlock Text="Display Name (optional)"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding EditDisplayName, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource BackgroundLevel0Brush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6" Margin="0,0,0,12"/>

                    <TextBlock Text="Handicap"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding EditHandicap, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource BackgroundLevel0Brush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderSubtleBrush}"
                             Padding="8,6" Margin="0,0,0,24"/>

                    <!-- Save Button -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Save Golfer"
                                Command="{Binding SaveGolferCommand}"
                                Padding="16,8"
                                Style="{DynamicResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
