<Window x:Class="Screener.UI.Views.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Color Source"
        Width="340" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Color preview -->
        <Border Grid.Row="0" Height="80" CornerRadius="4"
                BorderBrush="#555" BorderThickness="1" Margin="0,0,0,12">
            <Border.Background>
                <SolidColorBrush x:Name="PreviewBrush" Color="#FF0000"/>
            </Border.Background>
        </Border>

        <!-- Red slider -->
        <Grid Grid.Row="1" Margin="0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="R" Foreground="#CCC" VerticalAlignment="Center" FontWeight="Bold"/>
            <Slider x:Name="RedSlider" Grid.Column="1" Minimum="0" Maximum="255" Value="255"
                    VerticalAlignment="Center" ValueChanged="OnSliderChanged"/>
            <TextBlock Grid.Column="2" Text="{Binding Value, ElementName=RedSlider, StringFormat={}{0:0}}"
                       Foreground="#CCC" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Green slider -->
        <Grid Grid.Row="2" Margin="0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="G" Foreground="#CCC" VerticalAlignment="Center" FontWeight="Bold"/>
            <Slider x:Name="GreenSlider" Grid.Column="1" Minimum="0" Maximum="255" Value="0"
                    VerticalAlignment="Center" ValueChanged="OnSliderChanged"/>
            <TextBlock Grid.Column="2" Text="{Binding Value, ElementName=GreenSlider, StringFormat={}{0:0}}"
                       Foreground="#CCC" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Blue slider -->
        <Grid Grid.Row="3" Margin="0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="B" Foreground="#CCC" VerticalAlignment="Center" FontWeight="Bold"/>
            <Slider x:Name="BlueSlider" Grid.Column="1" Minimum="0" Maximum="255" Value="0"
                    VerticalAlignment="Center" ValueChanged="OnSliderChanged"/>
            <TextBlock Grid.Column="2" Text="{Binding Value, ElementName=BlueSlider, StringFormat={}{0:0}}"
                       Foreground="#CCC" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Hex display -->
        <TextBlock x:Name="HexText" Grid.Row="4" Text="#FF0000"
                   Foreground="#CCC" FontFamily="Consolas" FontSize="14"
                   HorizontalAlignment="Center" Margin="0,8"/>

        <!-- OK / Cancel -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="28" Margin="0,0,8,0"
                    Click="OnCancel" Background="#333" Foreground="#CCC" BorderBrush="#555"/>
            <Button Content="OK" Width="80" Height="28"
                    Click="OnOk" Background="#0078D4" Foreground="White" BorderBrush="#0078D4"/>
        </StackPanel>
    </Grid>
</Window>
