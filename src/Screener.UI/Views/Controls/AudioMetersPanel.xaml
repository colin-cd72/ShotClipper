<UserControl x:Class="Screener.UI.Views.Controls.AudioMetersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinHeight="250">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Controls: Bank Selector + Master Volume -->
        <Border Grid.Row="0" Background="#222" CornerRadius="3" Margin="2,0,2,4" Padding="6,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Master Volume (+12dB boost capable) -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Master" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="10" FontWeight="SemiBold" Margin="0,0,6,0"/>
                    <Slider Grid.Column="1" Orientation="Horizontal"
                            Minimum="0" Maximum="4" Value="{Binding MasterVolume}"
                            SmallChange="0.05" LargeChange="0.25"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="{Binding MasterVolumeDb, StringFormat={}{0:F1} dB}"
                               Foreground="#999" VerticalAlignment="Center"
                               FontSize="10" Margin="6,0,0,0" Width="46"/>
                </Grid>

                <!-- Channel Bank Selector -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <RadioButton Content="1-8" GroupName="ChannelBank"
                                 IsChecked="{Binding ShowFirstBank}"
                                 Foreground="#AAA" FontSize="10" Margin="0,0,12,0"/>
                    <RadioButton Content="9-16" GroupName="ChannelBank"
                                 IsChecked="{Binding ShowSecondBank}"
                                 Foreground="#AAA" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Meters Area with dB Scale -->
        <Grid Grid.Row="1" Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- dB Scale Labels (10 equal rows = 6dB each, 0 to -60) -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#888" Margin="0,-6,3,0"/>
                <TextBlock Grid.Row="1" Text="-6" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#777" Margin="0,-6,3,0"/>
                <TextBlock Grid.Row="2" Text="-12" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#777" Margin="0,-6,3,0"/>
                <TextBlock Grid.Row="3" Text="-18" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#666" Margin="0,-6,3,0"/>
                <TextBlock Grid.Row="5" Text="-30" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#555" Margin="0,-6,3,0"/>
                <TextBlock Grid.Row="8" Text="-48" VerticalAlignment="Top" HorizontalAlignment="Right"
                           FontSize="9" Foreground="#444" Margin="0,-6,3,0"/>
            </Grid>

            <!-- Channel Meter Strips -->
            <ItemsControl Grid.Column="1" ItemsSource="{Binding DisplayChannels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="1,0" MinWidth="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Meter Bar (full width, scrollwheel adjusts volume) -->
                            <Border Grid.Row="0" Background="#141414" CornerRadius="2"
                                    ClipToBounds="True"
                                    Opacity="{Binding IsMuted, Converter={StaticResource MutedToOpacityConverter}}"
                                    Tag="{Binding}">
                                <Grid>
                                    <!-- Level fill: gradient scales from bottom -->
                                    <Border VerticalAlignment="Stretch"
                                            RenderTransformOrigin="0.5,1">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <GradientStop Color="#22AA22" Offset="0.0"/>
                                                <GradientStop Color="#44BB22" Offset="0.40"/>
                                                <GradientStop Color="#88CC22" Offset="0.58"/>
                                                <GradientStop Color="#BBBB22" Offset="0.70"/>
                                                <GradientStop Color="#CC8822" Offset="0.82"/>
                                                <GradientStop Color="#CC3322" Offset="0.92"/>
                                                <GradientStop Color="#EE2222" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.RenderTransform>
                                            <ScaleTransform ScaleY="{Binding DisplayLevel}"/>
                                        </Border.RenderTransform>
                                    </Border>

                                    <!-- Peak hold indicator -->
                                    <Grid VerticalAlignment="Stretch"
                                          RenderTransformOrigin="0.5,1"
                                          IsHitTestVisible="False">
                                        <Grid.RenderTransform>
                                            <ScaleTransform ScaleY="{Binding DisplayPeak}"/>
                                        </Grid.RenderTransform>
                                        <Border Height="2" VerticalAlignment="Top"
                                                Background="#CCFFFFFF"/>
                                    </Grid>

                                    <!-- Clipping indicator -->
                                    <Border Height="4" VerticalAlignment="Top"
                                            Background="#FF2222" CornerRadius="2,2,0,0"
                                            Visibility="{Binding IsClipping, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Reference lines at 6dB intervals -->
                                    <Grid IsHitTestVisible="False" Opacity="0.12">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="1" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="2" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="3" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="4" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="5" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="6" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="7" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                        <Border Grid.Row="8" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                    </Grid>

                                    <!-- Volume fader indicator (cyan line with side arrows) -->
                                    <Grid VerticalAlignment="Stretch" RenderTransformOrigin="0.5,1"
                                          IsHitTestVisible="False">
                                        <Grid.RenderTransform>
                                            <ScaleTransform ScaleY="{Binding NormalizedVolume}"/>
                                        </Grid.RenderTransform>
                                        <Grid VerticalAlignment="Top" Height="7" Margin="0,-3,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="4"/>
                                            </Grid.ColumnDefinitions>
                                            <Polygon Grid.Column="0" Points="0,3.5 4,0.5 4,6.5"
                                                     Fill="#44AAFF"/>
                                            <Border Grid.Column="1" Height="2" Background="#44AAFF"
                                                    VerticalAlignment="Center" Opacity="0.7"/>
                                            <Polygon Grid.Column="2" Points="4,3.5 0,0.5 0,6.5"
                                                     Fill="#44AAFF"/>
                                        </Grid>
                                    </Grid>

                                    <!-- Drag overlay for volume fader (topmost, catches mouse) -->
                                    <Border Background="Transparent" Cursor="SizeNS"
                                            MouseLeftButtonDown="MeterBar_MouseLeftButtonDown"
                                            MouseMove="MeterBar_MouseMove"
                                            MouseLeftButtonUp="MeterBar_MouseLeftButtonUp"/>
                                </Grid>
                            </Border>

                            <!-- Volume dB display (click to type, scroll to adjust) -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding VolumeDb, StringFormat={}{0:F0}}"
                                       HorizontalAlignment="Center"
                                       Foreground="#999" FontSize="9"
                                       Margin="0,3,0,0"
                                       ToolTip="{Binding VolumeDb, StringFormat=Volume: {0:F1} dB&#x0a;Scroll wheel on meter to adjust&#x0a;Double-click to reset to 0 dB}"/>

                            <!-- Mute Button -->
                            <ToggleButton Grid.Row="2" Content="M"
                                          IsChecked="{Binding IsMuted, Mode=TwoWay}"
                                          Height="18" Margin="1,2,1,0"
                                          FontSize="9" FontWeight="Bold"
                                          ToolTip="Mute" Cursor="Hand">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                        <Setter Property="Foreground" Value="#777"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="bg" Background="{TemplateBinding Background}"
                                                            CornerRadius="2" Padding="2">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="bg" Property="Background" Value="#CC3333"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsMouseOver" Value="True"/>
                                                                <Condition Property="IsChecked" Value="False"/>
                                                            </MultiTrigger.Conditions>
                                                            <Setter TargetName="bg" Property="Background" Value="#444"/>
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Channel Label -->
                            <TextBlock Grid.Row="3" Text="{Binding ChannelNumber}"
                                       HorizontalAlignment="Center"
                                       Foreground="#777" FontSize="9" FontWeight="SemiBold"
                                       Margin="0,2,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </Grid>
</UserControl>
