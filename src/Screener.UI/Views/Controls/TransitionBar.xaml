<UserControl x:Class="Screener.UI.Views.Controls.TransitionBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="90">

    <Border Background="{DynamicResource BackgroundLevel1Brush}"
            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
            CornerRadius="6" Padding="6,8" Margin="4,0"
            Effect="{DynamicResource PanelShadow}">

        <StackPanel>
            <!-- Section Header -->
            <TextBlock Text="TRANSITION" FontSize="9" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>

            <!-- CUT button -->
            <Button Content="CUT" Command="{Binding ExecuteCutCommand}"
                    Style="{DynamicResource TransitionButtonStyle}"/>

            <!-- DISS button -->
            <Button Content="DISS" Command="{Binding ExecuteDissolveCommand}"
                    Style="{DynamicResource TransitionButtonStyle}"/>

            <!-- DIP button -->
            <Button Content="DIP" Command="{Binding ExecuteDipToBlackCommand}"
                    Style="{DynamicResource TransitionButtonStyle}"/>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- Duration -->
            <TextBlock Text="DURATION" FontSize="8" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding TransitionDurationMs, UpdateSourceTrigger=PropertyChanged}"
                         Height="24" FontSize="10" VerticalContentAlignment="Center"
                         TextAlignment="Center"
                         Background="{DynamicResource BackgroundLevel3Brush}"
                         Padding="2,0"/>
                <TextBlock Grid.Column="1" Text="ms" Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="8" VerticalAlignment="Center" Margin="3,0,0,0"/>
            </Grid>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- AUTO button -->
            <Button Content="AUTO" Command="{Binding ExecuteAutoTransitionCommand}"
                    Style="{DynamicResource TransitionButtonStyle}" Padding="0,6"/>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- T-Bar (custom vertical fader) -->
            <TextBlock Text="T-BAR" FontSize="8" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Slider Minimum="0" Maximum="1"
                    Value="{Binding TransitionPosition}"
                    Style="{DynamicResource TBarSliderStyle}"
                    Height="120" HorizontalAlignment="Center"
                    IsSnapToTickEnabled="False"/>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- KEY toggle -->
            <ToggleButton IsChecked="{Binding IsKeyActive}"
                          Style="{DynamicResource KeyToggleButtonStyle}">
                <TextBlock Text="KEY" Foreground="{DynamicResource TextPrimaryBrush}"
                           FontWeight="Bold" FontSize="11"/>
            </ToggleButton>
        </StackPanel>
    </Border>
</UserControl>
