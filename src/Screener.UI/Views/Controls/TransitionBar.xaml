<UserControl x:Class="Screener.UI.Views.Controls.TransitionBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="90">

    <Border Background="{DynamicResource BackgroundLevel1Brush}"
            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
            CornerRadius="6" Padding="6,8" Margin="4,0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <StackPanel>
            <!-- Section Header -->
            <TextBlock Text="TRANSITION" FontSize="9" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>

            <!-- CUT button -->
            <RadioButton x:Name="CutButton" Content="CUT" GroupName="TransType"
                         IsChecked="{Binding SelectedTransition, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Cut}"
                         Margin="0,2" Padding="0,5" FontSize="11" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}" Cursor="Hand"
                         HorizontalContentAlignment="Center">
                <RadioButton.Style>
                    <Style TargetType="RadioButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="Bd" Background="{DynamicResource BackgroundLevel3Brush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#40FF0000"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF0000"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel2Brush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

            <!-- DISS button -->
            <RadioButton Content="DISS" GroupName="TransType"
                         IsChecked="{Binding SelectedTransition, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Dissolve}"
                         Margin="0,2" Padding="0,5" FontSize="11" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}" Cursor="Hand"
                         HorizontalContentAlignment="Center">
                <RadioButton.Style>
                    <Style TargetType="RadioButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="Bd" Background="{DynamicResource BackgroundLevel3Brush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#40FF0000"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF0000"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel2Brush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

            <!-- DIP button -->
            <RadioButton Content="DIP" GroupName="TransType"
                         IsChecked="{Binding SelectedTransition, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=DipToBlack}"
                         Margin="0,2" Padding="0,5" FontSize="11" FontWeight="Bold"
                         Foreground="{DynamicResource TextPrimaryBrush}" Cursor="Hand"
                         HorizontalContentAlignment="Center">
                <RadioButton.Style>
                    <Style TargetType="RadioButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="Bd" Background="{DynamicResource BackgroundLevel3Brush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#40FF0000"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FF0000"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel2Brush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </RadioButton.Style>
            </RadioButton>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- Duration -->
            <TextBlock Text="DURATION" FontSize="8" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding TransitionDurationMs, UpdateSourceTrigger=PropertyChanged}"
                         Height="24" FontSize="10" VerticalContentAlignment="Center"
                         TextAlignment="Center"
                         Background="{DynamicResource BackgroundLevel3Brush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource BorderSubtleBrush}"
                         BorderThickness="1" Padding="2,0"/>
                <TextBlock Grid.Column="1" Text="ms" Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="8" VerticalAlignment="Center" Margin="3,0,0,0"/>
            </Grid>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- AUTO button -->
            <Button Content="AUTO" Command="{Binding ExecuteAutoTransitionCommand}"
                    Margin="0,2" Padding="0,6" FontSize="11" FontWeight="Bold" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource BackgroundLevel3Brush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderSubtleBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel2Brush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#40FF0000"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- T-Bar (vertical slider) -->
            <TextBlock Text="T-BAR" FontSize="8" FontWeight="SemiBold"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Slider Minimum="0" Maximum="1"
                    Value="{Binding TransitionPosition}"
                    Orientation="Vertical"
                    Height="120" HorizontalAlignment="Center"
                    IsSnapToTickEnabled="False"/>

            <!-- Divider -->
            <Rectangle Height="1" Fill="{DynamicResource BorderSubtleBrush}" Margin="4,8"/>

            <!-- KEY toggle -->
            <ToggleButton IsChecked="{Binding IsKeyActive}"
                          Margin="0,2" Padding="0,5" FontSize="11" FontWeight="Bold" Cursor="Hand">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Content" Value="KEY"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="Bd" Background="{DynamicResource BackgroundLevel3Brush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="1"
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#40FFAA00"/>
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="#FFAA00"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource BackgroundLevel2Brush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
                <TextBlock Text="KEY" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="Bold" FontSize="11"/>
            </ToggleButton>
        </StackPanel>
    </Border>
</UserControl>
