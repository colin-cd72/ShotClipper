<Window x:Class="Screener.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Screener.UI.ViewModels"
        mc:Ignorable="d"
        Title="Settings"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimaryBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Tab item style -->
        <Style x:Key="SettingsTabItem" TargetType="TabItem">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Group box style -->
        <Style x:Key="SettingsGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="{DynamicResource BackgroundTertiaryBrush}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Padding="12,6">
                                <ContentPresenter ContentSource="Header"
                                                  TextBlock.FontWeight="SemiBold"
                                                  TextBlock.Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label style -->
        <Style x:Key="SettingsLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl x:Name="SettingsTabControl"
                    BorderThickness="0"
                    Background="Transparent"
                    Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource SettingsTabItem}"/>
            </TabControl.Resources>

            <!-- General Settings -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="Application" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Start with Windows"
                                          IsChecked="{Binding StartWithWindows}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Minimize to system tray"
                                          IsChecked="{Binding MinimizeToTray}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Show notifications"
                                          IsChecked="{Binding ShowNotifications}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Default Recording Location" Style="{StaticResource SettingsGroupBox}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding DefaultRecordingPath}"
                                         IsReadOnly="True"
                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Padding="8,6"/>
                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Command="{Binding BrowseRecordingPathCommand}"
                                        Margin="8,0,0,0"
                                        Padding="16,6"
                                        Style="{DynamicResource SecondaryButtonStyle}"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Filename Template" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBox Text="{Binding FilenameTemplate}"
                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Padding="8,6"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Variables: {date}, {time}, {timecode}, {device}, {preset}"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           FontSize="11"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Video Settings -->
            <TabItem Header="Video">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="Capture Device" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Device:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding CaptureDevices}"
                                          SelectedItem="{Binding SelectedDevice}"
                                          DisplayMemberPath="Name"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Input:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding VideoInputs}"
                                          SelectedItem="{Binding SelectedInput}"
                                          DisplayMemberPath="DisplayName"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Recording Quality" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Preset:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding EncodingPresets}"
                                          SelectedItem="{Binding SelectedPreset}"
                                          DisplayMemberPath="Name"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>

                                <TextBlock Text="Description:" Style="{StaticResource SettingsLabel}" Margin="0,8,0,4"/>
                                <TextBlock Text="{Binding SelectedPreset.Description}"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Hardware Encoding" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Detected encoders:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ItemsControl ItemsSource="{Binding AvailableEncoders}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <CheckBox Content="Prefer hardware encoding"
                                          IsChecked="{Binding PreferHardwareEncoding}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,12,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Audio Settings -->
            <TabItem Header="Audio">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="Audio Input" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Channels:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AudioChannelOptions}"
                                          SelectedItem="{Binding SelectedAudioChannels}"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Sample Rate:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding SampleRateOptions}"
                                          SelectedItem="{Binding SelectedSampleRate}"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Audio Preview" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Enable audio preview"
                                          IsChecked="{Binding EnableAudioPreview}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Preview Device:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding AudioOutputDevices}"
                                          SelectedItem="{Binding SelectedAudioOutput}"
                                          DisplayMemberPath="Name"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          IsEnabled="{Binding EnableAudioPreview}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Audio Meters" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Meter Type:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding MeterTypes}"
                                          SelectedItem="{Binding SelectedMeterType}"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Reference Level (dBFS):" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <Slider Value="{Binding ReferenceLevel}"
                                        Minimum="-24" Maximum="0"
                                        TickFrequency="6"
                                        IsSnapToTickEnabled="True"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Timecode Settings -->
            <TabItem Header="Timecode">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="Time Source" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <RadioButton Content="NTP (Network Time)"
                                             IsChecked="{Binding UseNtpTime}"
                                             GroupName="TimeSource"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             Margin="0,0,0,8"/>
                                <RadioButton Content="System Clock"
                                             IsChecked="{Binding UseSystemTime}"
                                             GroupName="TimeSource"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             Margin="0,0,0,8"/>
                                <RadioButton Content="Manual Entry"
                                             IsChecked="{Binding UseManualTime}"
                                             GroupName="TimeSource"
                                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="NTP Settings" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="NTP Server:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NtpServer}"
                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Padding="8,6"
                                         Margin="0,0,0,8"/>

                                <CheckBox Content="Auto-sync on startup"
                                          IsChecked="{Binding AutoSyncNtp}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Timezone" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Timezone:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Timezones}"
                                          SelectedItem="{Binding SelectedTimezone}"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Timecode Format" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Use drop-frame timecode (for 29.97/59.94 fps)"
                                          IsChecked="{Binding UseDropFrame}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Streaming Settings -->
            <TabItem Header="Streaming">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="WebRTC Server" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Enable WebRTC streaming"
                                          IsChecked="{Binding EnableStreaming}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Port:" Style="{StaticResource SettingsLabel}" Grid.Row="0" Grid.Column="0"/>
                                    <TextBox Text="{Binding StreamingPort}"
                                             Width="80"
                                             HorizontalAlignment="Left"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6"
                                             Grid.Row="0" Grid.Column="1"
                                             Margin="0,0,0,8"/>

                                    <TextBlock Text="Max Viewers:" Style="{StaticResource SettingsLabel}" Grid.Row="1" Grid.Column="0"/>
                                    <TextBox Text="{Binding MaxViewers}"
                                             Width="80"
                                             HorizontalAlignment="Left"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6"
                                             Grid.Row="1" Grid.Column="1"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Security" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Require access token"
                                          IsChecked="{Binding RequireAccessToken}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>

                                <TextBlock Text="Access Token:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding AccessToken}"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6"
                                             IsEnabled="{Binding RequireAccessToken}"/>
                                    <Button Grid.Column="1"
                                            Content="Generate"
                                            Command="{Binding GenerateTokenCommand}"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            IsEnabled="{Binding RequireAccessToken}"
                                            Style="{DynamicResource SecondaryButtonStyle}"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Quality" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Resolution:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding StreamingResolutions}"
                                          SelectedItem="{Binding SelectedStreamingResolution}"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Bitrate (kbps):" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Value="{Binding StreamingBitrate}"
                                            Minimum="500" Maximum="8000"
                                            TickFrequency="500"
                                            IsSnapToTickEnabled="True"
                                            VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding StreamingBitrate, UpdateSourceTrigger=PropertyChanged}"
                                             Width="60" Margin="8,0,0,0"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,4" TextAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="NDI" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="{Binding NdiRuntimeStatus}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,8"/>
                                <CheckBox Content="Enable NDI source discovery"
                                          IsChecked="{Binding EnableNdiDiscovery}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Enable NDI output"
                                          IsChecked="{Binding EnableNdiOutput}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="NDI Source Name:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NdiOutputSourceName}"
                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"
                                         Padding="8,6"
                                         IsEnabled="{Binding EnableNdiOutput}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="SRT Input" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <TextBlock Text="Configure SRT listener endpoints for incoming streams."
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="11" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding SrtInputs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,6">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Name}"
                                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Padding="6,4" Margin="0,0,4,0"/>
                                                <TextBox Grid.Column="1" Text="{Binding Port}"
                                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Padding="6,4" Margin="0,0,4,0"
                                                         ToolTip="Port"/>
                                                <TextBox Grid.Column="2" Text="{Binding Latency}"
                                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Padding="6,4" Margin="0,0,4,0"
                                                         ToolTip="Latency (ms)"/>
                                                <Button Grid.Column="3" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                                        FontSize="12" Foreground="{DynamicResource AccentRedBrush}"
                                                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                        Padding="4,2"
                                                        Command="{Binding DataContext.RemoveSrtInputCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Remove"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Content="+ Add SRT Input"
                                        Command="{Binding AddSrtInputCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="12,6" Margin="0,4,0,0"
                                        Style="{DynamicResource SecondaryButtonStyle}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="SRT Output" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Enable SRT output"
                                          IsChecked="{Binding EnableSrtOutput}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <Grid IsEnabled="{Binding EnableSrtOutput}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Mode:" Style="{StaticResource SettingsLabel}" Grid.Row="0"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1"
                                              ItemsSource="{Binding SrtOutputModes}"
                                              SelectedItem="{Binding SelectedSrtOutputMode}"
                                              Width="120" HorizontalAlignment="Left"
                                              Background="{DynamicResource BackgroundTertiaryBrush}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              Margin="0,0,0,8"/>

                                    <TextBlock Text="Address:" Style="{StaticResource SettingsLabel}" Grid.Row="1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding SrtOutputAddress}"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6" Margin="0,0,0,8"/>

                                    <TextBlock Text="Port:" Style="{StaticResource SettingsLabel}" Grid.Row="2"/>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding SrtOutputPort}"
                                             Width="80" HorizontalAlignment="Left"
                                             Background="{DynamicResource BackgroundTertiaryBrush}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             BorderBrush="{DynamicResource BorderBrush}"
                                             Padding="8,6" Margin="0,0,0,8"/>

                                    <TextBlock Text="Latency (ms):" Style="{StaticResource SettingsLabel}" Grid.Row="3"/>
                                    <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Value="{Binding SrtOutputLatency}"
                                                Minimum="20" Maximum="1000"
                                                TickFrequency="20"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SrtOutputLatency, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="60" Margin="8,0,0,0"
                                                 Background="{DynamicResource BackgroundTertiaryBrush}"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 BorderBrush="{DynamicResource BorderBrush}"
                                                 Padding="8,4" TextAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Text="Bitrate (kbps):" Style="{StaticResource SettingsLabel}" Grid.Row="4"/>
                                    <Grid Grid.Row="4" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Value="{Binding SrtOutputBitrate}"
                                                Minimum="500" Maximum="20000"
                                                TickFrequency="500"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding SrtOutputBitrate, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="60" Margin="8,0,0,0"
                                                 Background="{DynamicResource BackgroundTertiaryBrush}"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 BorderBrush="{DynamicResource BorderBrush}"
                                                 Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Cloud Storage Settings -->
            <TabItem Header="Cloud">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <StackPanel>
                        <GroupBox Header="Cloud Storage Providers" Style="{StaticResource SettingsGroupBox}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ListBox ItemsSource="{Binding CloudProviders}"
                                         SelectedItem="{Binding SelectedProvider}"
                                         Background="{DynamicResource BackgroundTertiaryBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="8,4">
                                                <Ellipse Width="8" Height="8"
                                                         Fill="{Binding StatusColor}"
                                                         Margin="0,0,8,0"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding DisplayName}"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                    <TextBlock Text="{Binding SelectedProvider.DisplayName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,12"/>

                                    <Button Content="Configure..."
                                            Command="{Binding ConfigureProviderCommand}"
                                            Width="120"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,8"
                                            Style="{DynamicResource PrimaryButtonStyle}"/>

                                    <Button Content="Test Connection"
                                            Command="{Binding TestConnectionCommand}"
                                            Width="120"
                                            HorizontalAlignment="Left"
                                            Style="{DynamicResource SecondaryButtonStyle}"/>

                                    <TextBlock Text="{Binding ConnectionStatus}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Upload Settings" Style="{StaticResource SettingsGroupBox}">
                            <StackPanel>
                                <CheckBox Content="Auto-upload recordings"
                                          IsChecked="{Binding AutoUpload}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Auto-upload clips"
                                          IsChecked="{Binding AutoUploadClips}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,12"/>

                                <TextBlock Text="Concurrent Uploads:" Style="{StaticResource SettingsLabel}" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding ConcurrentUploadOptions}"
                                          SelectedItem="{Binding MaxConcurrentUploads}"
                                          Width="80"
                                          HorizontalAlignment="Left"
                                          Background="{DynamicResource BackgroundTertiaryBrush}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Keyboard Shortcuts -->
            <TabItem Header="Shortcuts">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <GroupBox Header="Keyboard Shortcuts" Style="{StaticResource SettingsGroupBox}">
                        <DataGrid ItemsSource="{Binding Shortcuts}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Background="{DynamicResource BackgroundTertiaryBrush}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{DynamicResource BorderBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Shortcut" Binding="{Binding Shortcut}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Bottom buttons -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundSecondaryBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"
                        Command="{Binding ResetDefaultsCommand}"
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Padding="16,8"
                        Margin="0,0,12,0"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Padding="24,8"
                        Style="{DynamicResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
