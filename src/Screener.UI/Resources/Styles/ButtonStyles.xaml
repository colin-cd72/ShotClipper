    </Style>

    <!-- Record Button Style with pulsing animation -->
    <Style x:Key="RecordButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource RecordingIdleBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="background"
                                 Fill="{TemplateBinding Background}"
                                 Stroke="{DynamicResource BorderMediumBrush}"
                                 StrokeThickness="2"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="background"
                                                     Storyboard.TargetProperty="StrokeThickness"
                                                     To="3" Duration="0:0:0.15"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="background"
                                                     Storyboard.TargetProperty="StrokeThickness"
                                                     To="2" Duration="0:0:0.15"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="background" Property="Stroke" Value="{DynamicResource TextPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="background" Property="Fill" Value="{DynamicResource RecordingActiveBrush}"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                            <Setter TargetName="background" Property="Fill" Value="{DynamicResource RecordingActiveBrush}"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="RecordPulse">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="background"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1.0" To="0.6"
                                                         Duration="0:0:0.8"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="RecordPulse"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stream Toggle Button Style â€” Full redesign with LIVE indicator -->
    <Style x:Key="StreamToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                            CornerRadius="4"
                            Padding="10,5"
                            BorderThickness="1">
                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource BackgroundLevel2}"/>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource BorderSubtle}"/>
                        </Border.BorderBrush>
                        <Border.Effect>
                            <DropShadowEffect x:Name="glowEffect" Color="#E53935"
                                              BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="dot" Width="8" Height="8" Margin="0,0,6,0"
                                     Fill="#FF888888"/>
                            <TextBlock x:Name="label" Text="Stream" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover when unchecked -->
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource BackgroundLevel3}"
                                                    Duration="0:0:0.15"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="border"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource BackgroundLevel2}"
                                                    Duration="0:0:0.15"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- Checked = LIVE state -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#E53935"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="border" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="#E53935"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="dot" Property="Fill" Value="White"/>
                            <Setter TargetName="label" Property="Text" Value="LIVE"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="DotPulse">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="dot"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0.3"
                                                         Duration="0:0:0.8"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                                <BeginStoryboard x:Name="GlowPulse">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                         Storyboard.TargetProperty="BlurRadius"
                                                         From="8" To="16"
                                                         Duration="0:0:1.2"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                        <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.4" To="0.7"
                                                         Duration="0:0:1.2"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="DotPulse"/>
                                <StopStoryboard BeginStoryboardName="GlowPulse"/>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Checked + Hover = darker red -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#D32F2F"/>
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

