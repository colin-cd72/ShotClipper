<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Hierarchy (Darkest to Lightest) -->
    <Color x:Key="BackgroundLevel0">#FF1A1A1A</Color>
    <Color x:Key="BackgroundLevel1">#FF242424</Color>
    <Color x:Key="BackgroundLevel2">#FF2D2D2D</Color>
    <Color x:Key="BackgroundLevel3">#FF383838</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFFFF</Color>
    <Color x:Key="TextSecondary">#FFB0B0B0</Color>
    <Color x:Key="TextDisabled">#FF666666</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentBlue">#FF2196F3</Color>
    <Color x:Key="AccentGreen">#FF4CAF50</Color>
    <Color x:Key="AccentYellow">#FFFFC107</Color>
    <Color x:Key="AccentRed">#FFF44336</Color>
    <Color x:Key="AccentOrange">#FFFF9800</Color>

    <!-- Recording States -->
    <Color x:Key="RecordingActive">#FFE53935</Color>
    <Color x:Key="RecordingPaused">#FFFFB300</Color>
    <Color x:Key="RecordingIdle">#FF4CAF50</Color>

    <!-- Audio Meter Gradient -->
    <Color x:Key="MeterGreen">#FF4CAF50</Color>
    <Color x:Key="MeterYellow">#FFFFEB3B</Color>
    <Color x:Key="MeterOrange">#FFFF9800</Color>
    <Color x:Key="MeterRed">#FFF44336</Color>

    <!-- Borders -->
    <Color x:Key="BorderSubtle">#FF3D3D3D</Color>
    <Color x:Key="BorderMedium">#FF555555</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="BackgroundLevel0Brush" Color="{StaticResource BackgroundLevel0}"/>
    <SolidColorBrush x:Key="BackgroundLevel1Brush" Color="{StaticResource BackgroundLevel1}"/>
    <SolidColorBrush x:Key="BackgroundLevel2Brush" Color="{StaticResource BackgroundLevel2}"/>
    <SolidColorBrush x:Key="BackgroundLevel3Brush" Color="{StaticResource BackgroundLevel3}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>

    <SolidColorBrush x:Key="RecordingActiveBrush" Color="{StaticResource RecordingActive}"/>
    <SolidColorBrush x:Key="RecordingPausedBrush" Color="{StaticResource RecordingPaused}"/>
    <SolidColorBrush x:Key="RecordingIdleBrush" Color="{StaticResource RecordingIdle}"/>

    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="{StaticResource BorderMedium}"/>

    <!-- Aliases for SettingsWindow compatibility -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundLevel0}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundLevel1}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundLevel2}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderSubtle}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextDisabled}"/>

    <!-- Streaming -->
    <Color x:Key="StreamingLive">#FFE53935</Color>
    <SolidColorBrush x:Key="StreamingLiveBrush" Color="{StaticResource StreamingLive}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="AudioMeterGradient" StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="{StaticResource MeterGreen}" Offset="0"/>
        <GradientStop Color="{StaticResource MeterGreen}" Offset="0.6"/>
        <GradientStop Color="{StaticResource MeterYellow}" Offset="0.75"/>
        <GradientStop Color="{StaticResource MeterOrange}" Offset="0.85"/>
        <GradientStop Color="{StaticResource MeterRed}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PanelHeaderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2A2A2A" Offset="0"/>
        <GradientStop Color="#FF1E1E1E" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ToolbarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF292929" Offset="0"/>
        <GradientStop Color="#FF222222" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="StatusBarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF222222" Offset="0"/>
        <GradientStop Color="#FF1C1C1C" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardBorderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF404040" Offset="0"/>
        <GradientStop Color="#FF333333" Offset="1"/>
    </LinearGradientBrush>

    <!-- Drop Shadow Effects -->
    <DropShadowEffect x:Key="PanelShadow" BlurRadius="8" ShadowDepth="2"
                      Color="Black" Opacity="0.4" Direction="270"/>
    <DropShadowEffect x:Key="FloatingShadow" BlurRadius="16" ShadowDepth="4"
                      Color="Black" Opacity="0.6" Direction="270"/>

</ResourceDictionary>
