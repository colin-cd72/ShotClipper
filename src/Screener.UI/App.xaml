<Application x:Class="Screener.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Screener.UI.Converters"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:PercentToHeightConverter x:Key="PercentToHeightConverter"/>
            <converters:InversePercentToHeightConverter x:Key="InversePercentToHeightConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:PercentToPixelConverter x:Key="PercentToPixelConverter"/>
            <converters:PercentToMarginConverter x:Key="PercentToMarginConverter"/>
            <converters:MutedToOpacityConverter x:Key="MutedToOpacityConverter"/>
            <converters:LevelToPixelHeightMultiConverter x:Key="LevelToPixelHeightConverter"/>
            <converters:LevelToPixelHeightMultiConverter x:Key="InverseLevelToPixelHeightConverter" Inverse="True"/>
            <converters:LevelToBottomMarginMultiConverter x:Key="LevelToBottomMarginConverter"/>
            <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
